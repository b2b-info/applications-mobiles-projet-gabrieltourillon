<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="bounds"
    android:elevation="1dp">

    <TextView
        android:id="@+id/tvLoadoutDescriptionValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxLines="4"
        android:minLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvLoadoutDescriptionLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvLoadoutDescriptionLabel"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tvLoadoutNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Loadout Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLoadoutDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loadout Description:"
        app:layout_constraintStart_toStartOf="@+id/tvLoadoutNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvLoadoutNameLabel" />

    <TextView
        android:id="@+id/tvLoadoutNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvLoadoutNameLabel"
        app:layout_constraintTop_toTopOf="@+id/tvLoadoutNameLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>